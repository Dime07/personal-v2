---
const EXPERIENCE_LIST = [
  {
    company: "Digitiket",
    date: "2020",
    position: "Frontend Engineer",
    type: "Internship",
    website: "https://digitiket.com/",
  },
  {
    company: "Radya Labs Teknologi",
    date: "2022",
    position: "Frontend Engineer",
    type: "Internship",
    website: "https://radyadigital.com/id",
  },
  {
    company: "Aksantara Digital",
    date: "2021-2023",
    position: "Frontend Web Developer",
    type: "Freelance",
    website: "https://aksantara.com/",
  },
  {
    company: "Dealls Jobs",
    date: "2023",
    position: "Junior Frontend Engineer",
    type: "Full-time",
    website: "https://dealls.com/",
  },
];
---

<section id="experience" class="bg-black">
  <div
    class="max-w-[1440px] w-full mx-auto relative z-[2] px-5 py-20 space-y-8"
  >
    <h2 class="text-white md:text-5xl text-xl lg:text-2xl font-medium">
      Experience
    </h2>

    <ol class="items-center lg:flex">
      {
        EXPERIENCE_LIST.map((item) => (
          <li class="relative mb-6 lg:mb-0 group w-full">
            <div class="flex items-center">
              <div class="z-10 flex items-center justify-center w-6 h-6 bg-white rounded-full ring-0 ring-white/35 lg:ring-8 shrink-0 lg:group-last:animate-pulse">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width={1.5}
                  stroke="currentColor"
                  class="w-3 h-3"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 0 0 .75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 0 0-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0 1 12 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 0 1-.673-.38m0 0A2.18 2.18 0 0 1 3 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 0 1 3.413-.387m7.5 0V5.25A2.25 2.25 0 0 0 13.5 3h-3a2.25 2.25 0 0 0-2.25 2.25v.894m7.5 0a48.667 48.667 0 0 0-7.5 0M12 12.75h.008v.008H12v-.008Z"
                  />
                </svg>
              </div>
              <div class="hidden lg:flex w-full bg-gray-200 h-0.5 dark:bg-gray-700" />
            </div>
            <div class="mt-4 lg:pe-8 space-y-2">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white flex items-center gap-3 ">
                {item.position}{" "}
                <span class="px-2 py-1 bg-blue-500 rounded-md text-xs">
                  {item.type}
                </span>
              </h3>
              <a
                href={item.website}
                target="_blank"
                rel="noopener noreferrer"
                class="block text-base font-normal leading-none text-gray-400 dark:text-gray-500"
              >
                {item.company} - {item.date}
              </a>
            </div>
          </li>
        ))
      }
    </ol>
  </div>
</section>
