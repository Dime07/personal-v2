---
import Footer from "../components/Footer/index.astro";
const { pageTitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.jpg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Archivo:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />

    <!-- Meta tags -->
    <meta
      name="description"
      content="Hi! I'm Dimas Rafi, a passionate Frontend Engineer based in Indonesia, on a journey to continuously refine my skills and become a master of the craft. I possess strong expertise in HTML, JavaScript, and CSS, with a focus on leveraging Tailwind CSS for efficient and scalable UI development."
    />
    <meta name="author" content="Dimas Rafi" />
    <meta
      name="keywords"
      content="web, developer, dimas rafi, frontend, freelance"
    />

    <!-- Google / Search Engine Tags -->
    <meta itemprop="name" content="Dimas Rafi | Frontend Developer" />
    <meta
      itemprop="description"
      content="Hi! I'm Dimas Rafi, a passionate Frontend Engineer based in Indonesia, on a journey to continuously refine my skills and become a master of the craft. I possess strong expertise in HTML, JavaScript, and CSS, with a focus on leveraging Tailwind CSS for efficient and scalable UI development."
    />
    <meta itemprop="image" content="/previewImage.jpg" />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://dimasrafi.my.id" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Dimas Rafi | Frontend Developer" />
    <meta
      property="og:description"
      content="Hi! I'm Dimas Rafi, a passionate Frontend Engineer based in Indonesia, on a journey to continuously refine my skills and become a master of the craft. I possess strong expertise in HTML, JavaScript, and CSS, with a focus on leveraging Tailwind CSS for efficient and scalable UI development."
    />
    <meta property="og:image" content="/previewImage.jpg" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Dimas Rafi | Frontend Developer" />
    <meta
      name="twitter:description"
      content="Hi! I'm Dimas Rafi, a passionate Frontend Engineer based in Indonesia, on a journey to continuously refine my skills and become a master of the craft. I possess strong expertise in HTML, JavaScript, and CSS, with a focus on leveraging Tailwind CSS for efficient and scalable UI development."
    />
    <meta name="twitter:image" content="/previewImage.jpg" />
    <title>{pageTitle}</title></head
  >

  <body class="relative scroll-smooth">
    <slot />
    <Footer />
  </body>
</html>
